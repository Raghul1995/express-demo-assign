pipeline {
    agent any
    
    tools {
        nodejs "node"
    }

    stages {
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                sh 'npm install'
                sh 'npm run build'
                sh 'forever stopall || true'
                sh 'forever start -c "npm start" .'
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'dist/**', fingerprint: true
        }
    }
}
